double readnum(int numarr, int &els)
{
  cout<<"how many numbers are there? ";
  cin>>els;
  for(int i=0; i<els; i++) {
  cout<<"enter pos "<<i<<" value";
  cin>>numarr[i];
  }
  return; 
}

void outnum(int num, int nels) {
return; 
}

void marks(int arr[], int ct, int &mkg, int &mkl, int &mke, double avg) 
{
  for(int i=0; i<ct; i++) {
    if(arr[i]>avg) mkg++
    else if(arr[i]<avg) mkl++
    else mke++
    }
    return;
  }
